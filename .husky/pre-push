echo "Running pre-push checks..."

# Run npm pre-push script only if it is defined
if npm run | grep -q "pre-push"; then
  npm run pre-push

  # Check if pre-push checks succeeded
  if [ $? -ne 0 ]; then
    echo "Pre-push checks failed. Please fix the issues and try again."
    exit 1
  fi
else
  echo "No pre-push npm script defined. Skipping npm pre-push step."
fi

echo "Pre-push checks completed successfully!" 
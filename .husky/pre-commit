#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "üîç Running ESLint and Prettier checks..."

# Run eslint and prettier
npm run lint
LINT_RESULT=$?

npm run format -- --check
FORMAT_RESULT=$?

if [ $LINT_RESULT -ne 0 ] || [ $FORMAT_RESULT -ne 0 ]; then
  echo "‚ùå Pre-commit checks failed. Please fix the issues and try again."
  exit 1
fi

echo "‚úÖ Pre-commit checks passed!"

  fi
else
  echo "No npm 'pre-commit' script defined; skipping npm-based pre-commit checks."
fi

echo "Pre-commit checks completed successfully!" 
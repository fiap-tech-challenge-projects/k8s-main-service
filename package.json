{
  "name": "k8s-main-service",
  "version": "0.0.1",
  "description": "FIAP Tech Challenge - Main Service for Kubernetes",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"**/*.{ts,js}\" --max-warnings=0",
    "lint:path": "eslint",
    "lint:fix": "eslint \"**/*.{ts,js}\" --fix",
    "test": "jest",
    "test:all": "jest",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --testPathPattern=__tests__/e2e",
    "test:e2e:cov": "jest --testPathPattern=__tests__/e2e --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit --detectOpenHandles",
    "test:unit:cov": "jest --testPathPattern=__tests__/unit --coverage --detectOpenHandles",
    "test:integration": "npm run test:db:setup && jest --testPathPattern=__tests__/integration --runInBand && npm run test:db:down",
    "test:db:teardown": "docker compose -f docker-compose.test.yml down -v",
    "test:db:down": "docker compose -f docker-compose.test.yml down",
    "test:integration:only": "jest --testPathPattern=__tests__/integration --runInBand",
    "test:integration:cov": "npm run test:db:setup && jest --testPathPattern=__tests__/integration --coverage --runInBand",
    "test:ci": "npm run test:unit && npm run test:integration",
    "test:ci:cov": "npm run test:unit:cov && npm run test:integration:cov",
    "test:db:setup": "docker compose -f docker-compose.test.yml up -d test-db --wait && DATABASE_URL=${TEST_DATABASE_URL:-'postgresql://postgres:postgres@localhost:5433/fiap-tech-challenge-test?schema=public'} npx prisma db push --schema=./prisma/schema/",
    "test:db:ci": "RUN_MODE=ci docker compose -f docker-compose.test.yml up --build --abort-on-container-exit --exit-code-from api",
    "prisma:generate": "npx prisma generate --schema=./prisma/schema/",
    "prisma:migrate": "npx prisma migrate dev --schema=./prisma/schema/",
    "prisma:studio": "npx prisma studio --schema=./prisma/schema/",
    "prisma:format": "npx prettier --write prisma/**/*.prisma",
    "type-check": "tsc --noEmit",
    "pre-commit": "lint-staged && madge --circular --ts-config=tsconfig.json src/main.ts",
    "pre-push": "npm run lint && npm run type-check && npm run test:unit && npm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@opentelemetry/auto-instrumentations-node": "^0.50.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.50.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.50.0",
    "@opentelemetry/resources": "^1.24.0",
    "@opentelemetry/sdk-metrics": "^1.24.0",
    "@opentelemetry/sdk-node": "^0.50.0",
    "@opentelemetry/semantic-conventions": "^1.24.0",
    "@prisma/client": "^6.12.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express-basic-auth": "^1.2.1",
    "nestjs-pino": "^4.4.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^11.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^51.3.3",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^16.1.2",
    "madge": "^8.0.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.4.2",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^6.19.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testMatch": [
      "**/__tests__/**/*.(spec|test).ts",
      "**/*.(spec|test).ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/__tests__/factories/**",
      "!**/__tests__/e2e/**",
      "!**/__tests__/integration/**",
      "!**/__tests__/unit/**"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/factories/setup/index.ts"
    ],
    "setupFiles": [
      "<rootDir>/__tests__/factories/setup/setup-env.ts"
    ],
    "silent": true,
    "verbose": false,
    "moduleNameMapper": {
      "^@application/(.*)$": "<rootDir>/application/$1",
      "^@domain/(.*)$": "<rootDir>/domain/$1",
      "^@infra/(.*)$": "<rootDir>/infra/$1",
      "^@interfaces/(.*)$": "<rootDir>/interfaces/$1",
      "^@config/(.*)$": "<rootDir>/config/$1",
      "^@common/(.*)$": "<rootDir>/common/$1",
      "^@shared/(.*)$": "<rootDir>/shared/$1",
      "^@shared$": "<rootDir>/shared",
      "^@/__tests__/(.*)$": "<rootDir>/__tests__/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.prisma": [
      "prettier --write"
    ]
  },
  "prisma": {
    "schema": "./prisma/schema/"
  }
}

#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Validate commit message format
# Example: feat(scope): description | fix(scope): description

if ! head -1 "$1" | grep -qE "^(feat|fix|docs|style|refactor|perf|test|chore|ci|revert)(\(.+\))?!?: .{1,}"; then
  echo "‚ùå Commit message must follow conventional commits format:"
  echo "   feat(scope): description"
  echo "   fix(scope): description"
  echo "   docs: description"
  echo "   etc..."
  exit 1
fi
